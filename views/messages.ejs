<% if (success_message && success_message.length > 0) { %>
    <div class="alert alert-primary alert-success" role="alert">
        <%= success_message %>
    </div>
<% } %>


<% if (error_message && error_message.length > 0) { %>
    <div class="alert alert-primary alert-error" role="alert">
        <%= error_message %>
    </div>
<% } %>


<script>
    setTimeout( function () {
      var x = document.getElementsByClassName("alert-primary");
      for (var i = 0; i < x.length; i++) {
        x[i].style.display = "none";
      }
    }, 10000)
</script>
    